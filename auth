export interface User {
  id: string // Changed from id?: string to make it required
  firstName: string
  lastName: string
  email: string
  role: "admin" | "user"
  company?: string
  phone?: string
  status: "active" | "inactive" | "pending"
  dateCreated?: string
}

export interface UserFormData {
  firstName: string
  lastName: string
  email: string
  role: "admin" | "user"
  company: string
  phone: string
  password: string
  confirmPassword: string
  sendInvite: boolean
}
